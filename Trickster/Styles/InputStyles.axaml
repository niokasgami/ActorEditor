<!-- Trickster/Styles/InputStyles.axaml -->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TextBox Styles -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,5" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}" />
        <Setter Property="BorderThickness" Value="2" />
    </Style>

    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}" />
    </Style>

    <!-- ComboBox Styles -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style Selector="ComboBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}" />
    </Style>

    <Style Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}" />
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="Background" Value="White" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
        <Setter Property="Padding" Value="8,5" />
    </Style>

    <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource ParchmentMedium}" />
    </Style>

    <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource ParchmentDark}" />
    </Style>

    <!-- CheckBox Styles -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
    </Style>

    <!-- NumericUpDown Styles -->
    <Style Selector="NumericUpDown">
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style Selector="NumericUpDown /template/ TextBox">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}" />
    </Style>

    <Style Selector="NumericUpDown /template/ RepeatButton">
        <Setter Property="Background" Value="{StaticResource ParchmentMedium}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
    </Style>

    <Style Selector="NumericUpDown /template/ RepeatButton:pointerover">
        <Setter Property="Background" Value="{StaticResource ParchmentDark}" />
    </Style>

</Styles>