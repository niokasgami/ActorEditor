<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DataGrid column header -->
    <Style Selector="DataGridColumnHeader">
        <Setter Property="Background" Value="{StaticResource ParchmentDark}" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style Selector="DataGridColumnHeader:pointerover">
        <Setter Property="Background" Value="{StaticResource ParchmentMedium}" />
    </Style>

    <!-- DataGrid cells -->
    <Style Selector="DataGridCell">
        <Setter Property="Background" Value="{StaticResource ParchmentLight}" />
        <Setter Property="Foreground" Value="{StaticResource TextDark}" />
    </Style>

    <Style Selector="DataGridRow:selected DataGridCell">
        <Setter Property="Background" Value="{StaticResource ParchmentDark}" />
    </Style>

</Styles>